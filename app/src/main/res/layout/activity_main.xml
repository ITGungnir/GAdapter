<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <Button
        android:id="@+id/btn_simple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simple RecyclerView demo"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_payloads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Partial updating with payloads"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_multiple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Showing multiple kind of items"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_network"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Network requesting with paging"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_network_without_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Network requesting with paging (Without load more)"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_grid_rcv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GridLayoutManager + Footer"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_staggered_rcv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="StaggeredGridLayoutManager + Footer"
        android:textAllCaps="false" />

</LinearLayout>